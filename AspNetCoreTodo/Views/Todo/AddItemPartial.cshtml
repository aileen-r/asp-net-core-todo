@model TodoItem

<form asp-action="AddItem" method="POST">
    <label asp-for="Title">Add a new item:</label>
    <input asp-for="Title">
    <input asp-for="DueAt" id="DueAt">
    <button type="submit">Add</button>
</form>

@section Scripts
{
    @Html.PartialAsync("AddItemPartial_Scripts")
}

@section Styles {
    @Html.PartialAsync("AddItemPartial_Styles")
}